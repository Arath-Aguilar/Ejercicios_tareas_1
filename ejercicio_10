#include<stdio.h>
#include<stdlib.h>
int main (){
	float a,b,c,d,e;
	int opt;
	printf("MENU\n1.Triangulo\n2.Trapecio\n3.Rectangulo\n");
	printf("selecciona una opcion: ");
	scanf("%d",&opt);
	printf("dame la altura: ");
	scanf("%f",&a);
	switch(opt){
		case 1: printf("dame la base: ");
		scanf("%f",&b);
		c=a*b/2;
		case 2: printf("dame el valor del lado 1: ");
		scanf("%f",&d);
		printf("dame el valor del lado 2: ");
		scanf("%f",&e);
		c=a*(d+e)/2;
		case 3: printf("dame la base: ");
		scanf("%f",&b);
		c=a*b;
	}
	printf("El valor del area es: %.2f",c);
}
